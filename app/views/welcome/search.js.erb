<% if @terms.blank? %>
$('#results-box').html('')
$('#suggests-box').html('')
<% else %>
$('#results-box').html('<%= j render partial: "welcome/results", locals: { terms: @terms, result: @result, popular_tlds: @popular_tlds } %>')
<% end %>

<% if @new_tlds.present? %>
$('#suggests-box').html('<%= j render partial: "welcome/suggest", locals: { result: @new_tlds } %>')
<% else %>
$('#suggests-box').html('')
<% end %>
